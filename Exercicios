s = 'S'
lista_maior = []
lista_nome = []
lista_menor = []

while s == 'S':
  nome = str(input("Informe um nome: "))
  idade = int(input("Informe uma idade: "))

  if idade >= 18:
    lista_maior.append(idade)
    lista_nome.append(nome)
    print(f"A {nome} e Maior de idade")
  else:
    lista_menor.append(idade)
    lista_nome.append(nome)
    print(f"A {nome} e Menor de idade")

  len(lista_menor)
  len(lista_nome) 
  len(lista_maior)
  print(f"Os usuarios mais velho são {lista_nome} com {lista_maior} anos")
  print(f"Os usuarios mais novo tem {lista_menor} anos")

  s = str(input("Deseja continuar? [S/N]")).upper()

