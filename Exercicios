# PEP 498 -> F"" Strings
n = s = 0
qtd_vl = 0
while True:
  n = int(input("Informe um número (Digite 999 para sair): "))
  if n == 999:
    break
  s += n
  qtd_vl += 1 # Armazena os valores digitados.
print(f"Foram digitador {qtd_vl} números e a soma entre eles é {s}")

----------------------------------------------------------------------------------------------------------------------------------------------------------------

n = s = 0
while True:
  print("-=-" * 20)
  n = int(input("Qual tabuada deseja saber? "))
  if n < 0:
    break
  for c in range(0, 10):
    c += 1
    s = n * c
    print(f" {n} * {c} = {s}")
print("Fim opreração")

