lista_homem_mais_velho = []
lista_mulher_nova = []
lista_idade_homem = []
media_idade = int
qtd_mulher = []

for c in range(1, 5):
  nome = input("Informe seu nome: ")
  idade = int(input("Informe sua idade: "))
  sexo = input("Informe seu sexo: ")

  media_idade = idade / 4
  qtd_mulher = len(lista_mulher_nova)

  if (sexo == "M" and idade >= 18):
    lista_homem_mais_velho.append(nome)
    lista_idade_homem.append(idade)
    print(f"O {nome} e Homem, e tem {idade} anos")

  elif(sexo == "F" and idade >= 18):
    print(f"A {nome} e Mulher, e tem {idade} anos")

  elif(sexo == "M" and idade < 18):
    print(f"O {nome} e Homem, e tem {idade} anos")

  elif(sexo == "F" and idade < 18):
    lista_mulher_nova.append(idade)
    print(f"A {nome} e Mulher, e tem {idade} anos")

  else:
    print("Sexo Invalido")

len(lista_homem_mais_velho)

print("\n")

print(f"A media de idade é: {media_idade}")
print(f"A quantidade de mulheres menores de idade é: {qtd_mulher}")
if (lista_homem_mais_velho): # Pergunta se a lista possui algum valor. Ou seja se teve algum homem maior de idade digitado
  print(f"O Homem mais velho {lista_homem_mais_velho} tem {lista_idade_homem} anos")
else:
  print(f"Não possui nenhum homem com mais de 18 anos")


