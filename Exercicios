escolha = int
valor = int(input("Informe um valor: "))
valor2 = int(input("Informe outro valor: "))


while escolha != 5:
  print(f"\n")
  print(f"Valores Armazenados 1° valor: {valor} | 2° valor: {valor2}")
  print(f"\n")
  print("Escolha uma das opções abaixo: ")
  print(f"\n")

  print("[1] Soma")
  print("[2] Multiplicar")
  print("[3] Maior")
  print("[4] Novo Número")
  print("[5] Sair do Programa")
  print(f"\n")

  escolha = int(input("Escolha uma opção: "))

  if escolha == 1:
      s = 0
      s = valor + valor2
      print(f"A soma é {s}")

  elif escolha == 2:
      m = 0
      m = valor * valor2
      print(f"A multiplicação é {m}")

  elif escolha == 3:
    valor > valor2
    print(f"O maior valor é: {valor}")

  elif escolha == 4:
    print("Novo Número")
    novoValor = int
    novoValor2 = int

    novoValor = int(input("Informe um valor: "))
    novoValor2 = int(input("Informe um valor: "))

    valor2 = novoValor2
    valor = novoValor

  elif escolha == 5:
    print("FIM do Programa")
  else:
    print("Opção Inválida")

