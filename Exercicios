# Entrada de dados
valorHora = float(input("Quanto você ganha por hora? "))
qtdHorasTrabalhadas = float(input("Quantas horas você trabalhou no mês? "))

salarioBruto = valorHora * qtdHorasTrabalhadas
salarioLiquido = 0
ir = 0.5
inss = 0.10
fgts = 0.11
descontoIr = 0
descontoInss = 0
descontoFgts = 0

# Processamento
valorHora = float(input("Quanto você ganha por hora? "))
qtdHorasTrabalhadas = float(input("Quantas horas você trabalhou no mês? "))

salarioBruto = valorHora * qtdHorasTrabalhadas
salarioLiquido = 0
ir = 0.5
inss = 0.10
fgts = 0.11
descontoIr = 0
descontoInss = 0
descontoFgts = 0.11

if salarioBruto == 900:
  print("ISENTO")
elif (salarioBruto >= 900 and salarioBruto < 1500):
  descontoIr = salarioBruto * ir
  salarioLiquido = salarioBruto - descontoIr
elif (salarioBruto >= 1500 and salarioBruto < 2500):
  descontoInss = salarioBruto * inss
  salarioLiquido = salarioBruto - descontoInss
elif (salarioBruto >= 2500):
  descontoFgts = salarioBruto * fgts
  salarioLiquido = salarioBruto - descontoFgts
else:
  print("Valor inválido")

salarioBruto += - descontoFgts - descontoInss - descontoIr
descontoTotal = descontoIr + descontoInss + descontoFgts
valorTotalDesconto = salarioBruto
salarioLiquido =  descontoTotal

# Saida de dados
notaFiscal = (f"Salario Bruto: R${salarioBruto}"
               f"| Desconto IR: R${descontoIr}"
               f"| Desconto INSS: R${descontoInss}"
               f"| FGTS: R${descontoFgts}"
               f"| Total Desconto: R${valorTotalDesconto}"
               f"| Salario Liquido: R${salarioLiquido}")
print("-=-" * 20)
print("Nota Fiscal")
print("-=-" * 20)

print(f"\n{notaFiscal}\n")

