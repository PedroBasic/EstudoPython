from random import randint
user = str()
computer = randint(0, 10) # Faz o computador pensar em um número aleatório entre 1 e 6
tentativa = []

while user != computer:
  print("-=-" * 20)
  print("Estou pensando em um número entre 0 e 10 .......")
  print("-=-" * 20)

  user = int(input("Informe um número de 0 a 10: "))
  tentativa == computer
  tentativa.append(user)

  if user == computer:
    print(f"Você VENCEU o número é {user}")
  else:
    print(f"Você PERDEU o número é que o computador pensou foi {computer}. Você digitou")

print(f"Usuario tentou {len(tentativa)} vezes até acertar")
print("FIM")

