# Entrada de dados

produto1 = float(input("Informe o preço do Primeiro Produto: "))
produto2 = float(input("Informe o preço do Segundo Produto: "))
produto3 = float(input("Informe o preço do Terceiro Produto: "))

# Processamento e Saida de dados.

if (produto1 < produto2 and produto1 < produto3):
  print(f"Você deve levar o Primeiro produto, por se o mais barato valor R${produto1} reais.")
elif (produto2 < produto1 and produto2 < produto3):
  print(f"Você deve levar o Segundo produto, por se o mais barato valor R${produto2} reais.")
else:
  print(f"Você deve levar o Terceiro produto, por se o mais barato valor R${produto3} reais.")

