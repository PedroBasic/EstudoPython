# Entrada de dados
primeira_nota = float(input("Informe a primeta Nota: "))
segunda_nota = float(input("Informe a segunda Nota: "))

#Processamento
somaNotas = primeira_nota + segunda_nota
media = somaNotas / 2

# Saida de dados
if ((media >= 7) and (media < 9)):
  print(f"A média do aluno foi {media} e ele foi APROVADO")
elif (media < 6):
  print(f"A média do aluno foi {media} e ele foi REPROVADO")
elif (media == 10):
  print(f"A média do aluno foi {media} e ele foi APROVADO COM DISTINÇÃO")

