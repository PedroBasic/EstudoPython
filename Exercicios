num = int(input("Informe um número: "))
resultado = 1
while num != 0:

  for c in range(1, num + 1):
    resultado *= c
  print(f"O fatorial de {num} é {resultado}")
  print("Caso deseja sair digite [0] - sair")
  num = int(input("Informe um número: "))

print("FIM")

