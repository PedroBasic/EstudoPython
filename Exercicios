# Entrada de dados

salario_colaborador = float(input("Informe seu Salario Colaborador: "))
comisao = float
salario_final = float

# Processamento
if(salario_colaborador <= 280.00):
  comisao = salario_colaborador * 0.20
  salario_final = salario_colaborador + comisao
elif(salario_colaborador >= 280.00 and salario_colaborador <= 700.00):
  comisao = salario_colaborador * 0.15
  salario_final = salario_colaborador + comisao
elif(salario_colaborador >= 700.00 and salario_colaborador <= 1500.00):
  comisao = salario_colaborador * 0.10
  salario_final = salario_colaborador + comisao
elif(salario_colaborador > 1500.00):
  comisao = salario_colaborador * 0.05
  salario_final = salario_colaborador + comisao


# Saida de dados

novo_salario = salario_final

print(f"Salário antes do reajuste R${salario_colaborador}")
print(f"Salario percetual de aumento R${salario_final}")
print(f"Valor do salario aumentado {salario_final}")
print(f"Salario final R${novo_salario}")

