from random import randint
jogada = 0
par = impar = s = 0
computer = randint(par, impar)

while True:
  user = int(input("Qual você deseja (Par ou Impar): "))
  if user % 2 == 0:
    par += 1
  else:
    impar += 1

  if computer % 2 == 0:
    par += 1
  else:
    impar += 1

  jogada = par + impar

  if jogada % 2 == 0:
    par += 1
    print(f"O computador jogou {computer} e o usuário jogou {user}. Total de {jogada}")

  print(f"Você digitou {user} e o computador {computer}")

----------------------------------------------------------------------------------------------------------------------------------------------------------------

produto = str
valor = 0
valorTotal = 0
menorValor = int
produtoCaro = str
produtoBarato = str
maisCaro = 0
menorValor = 0

while True:
    
  produto = str(input("Informe o nome do produto: "))
  valor = int(input("Informe o valor do produto: "))

  stop = str(input("Deseja continuar? [S/N]")).upper()

  if valor < 1000:
    produtoBarato = produto
    menorValor = valor
    valorTotal += valor 

  elif valor > 1000:
    produtoCaro = produto
    maisCaro = valor
    valorTotal += valor

  if stop == "S":
    continue
  else:
    break  

print("------- FIM PROGRAMA ------\n")
print(f"O valor total é {valorTotal}") # Deu Certo
print(f"O produto mais barato é {produtoBarato} R${menorValor}") # Deu Certo
print(f"O produto mais caro é {produtoCaro} custa R${maisCaro}") # Deu Certo


